<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.ryancase.golf_v3.ViewModels.CourseSelectViewModel" />
    </data>

    <RelativeLayout xmlns:fbutton="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="14dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:paddingTop="14dp"
        tools:context=".ViewModels.CourseSelectViewModel">

        <!--Android:gravity sets the gravity of the content of the View its used on.
            Android:layout_gravity sets the gravity of the View or Layout in its parent.-->

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/courseNameTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Course Name:"
                    android:textColor="@color/fDarkPurple"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/courseNameEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="New Course"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textColor="@color/fDarkPurple"
                    android:textColorHint="@color/fDarkTeal"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <info.hoang8f.widget.FButton
                    android:id="@+id/newCourseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="New Course"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    fbutton:buttonColor="@color/fPurple"
                    fbutton:cornerRadius="5dp"
                    fbutton:shadowColor="@color/adbGreen"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <info.hoang8f.widget.FButton
                    android:id="@+id/beginRoundButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Begin Round"
                    android:visibility="gone"
                    fbutton:buttonColor="@color/adbGreen"
                    fbutton:cornerRadius="5dp"
                    fbutton:shadowColor="@color/fPurple"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/previousCourseTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous Courses" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ListView
                    android:id="@+id/savedCoursesList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>
</layout>

