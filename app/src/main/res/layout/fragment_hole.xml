<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ryancase.golf_v3.ViewModels.HoleViewModel" />
    </data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/holeRelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewModels.HoleViewModel">

        <!--Android:gravity sets the gravity of the content of the View its used on.
            Android:layout_gravity sets the gravity of the View or Layout in its parent.-->

        <TableLayout
            android:id="@+id/ratingTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate Your Shots"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>
            <!--Header-->

            <TableRow android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Driver" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Iron" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Approach" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Putt" />
            </TableRow>
            <!--Clubs-->

            <TableRow>

                <RadioGroup
                    android:id="@+id/DriverRadioGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="N/A" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="A" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="B" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="C" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="D" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/IronRadioGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="N/A" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="A" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="B" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="C" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="D" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/ApproachRadioGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="N/A" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="A" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="B" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="C" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="D" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/PuttRadioGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="N/A" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="A" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="B" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="C" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="D" />
                </RadioGroup>
            </TableRow>
            <!--Radio Groups-->
        </TableLayout>
        <!--Ratings Table-->

        <TableLayout xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/holeTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal">

                <NumberPicker
                    android:id="@+id/scoreSelector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1" />

                <NumberPicker
                    android:id="@+id/parSelector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/puttTv"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.puttTv}" />

            </TableRow>

            <TableRow
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <CheckBox
                    android:id="@+id/onePutt"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.onePutt.getText()}" />

                <CheckBox
                    android:id="@+id/twoPutt"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.twoPutt.getText()}" />

                <CheckBox
                    android:id="@+id/threePutt"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.threePutt.getText()}" />
            </TableRow>
            <!--PUTTS-->

            <TableRow
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <CheckBox
                    android:id="@+id/greenCheck"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.greenCheck.getText()}" />

                <CheckBox
                    android:id="@+id/fairwayCheck"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.fairwayCheck.getText()}" />

                <CheckBox
                    android:id="@+id/upAndDownCheck"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.upAndDownCheck.getText()}" />

            </TableRow>

            <TableRow android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

        </TableLayout>
        <!--Hole Statistics-->

        <Switch
            android:id="@+id/theSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="320dp"
            android:text="Show Club Ratings" />
        <!--Show-Ratings Switch-->

        <info.hoang8f.widget.FButton
            android:id="@+id/nextHole"
            style="@style/ButtonColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/theSwitch"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            fbutton:buttonColor="@color/fDarkTeal"
            fbutton:cornerRadius="15dp"
            fbutton:shadowEnabled="false" />
        <!--Next Hole-->


    </RelativeLayout>
</layout>

