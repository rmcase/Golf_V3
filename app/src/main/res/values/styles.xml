<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fDarkTeal</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="colorAccent">@color/fPurple</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ButtonColor" parent="Theme.AppCompat">
        <item name="android:background">@color/whiteOP</item>
    </style>

    <style name="StatTabTextView" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="TabIndicator" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/adbDarkGreen</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextViewStyling" parent="TextAppearance.AppCompat">
        <item name="android:textViewStyle">@style/ScorecardTextView</item>
    </style>

    <style name="Tabhost" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">@color/fPurple</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/fTeal</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/fTeal</item>
    </style>

    <style name="ScorecardTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">40dp</item>
    </style>
    
    <style name="ScorecardTextNonTable" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
